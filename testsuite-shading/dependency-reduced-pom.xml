              </execution>
              <execution>
                <id>unpack-jar-features</id>
                <phase>package</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <skip>true</skip>
                  <target>
                    <unzip>
                      <fileset>
                        <include />
                      </fileset>
                    </unzip>
                    <copy />
                    <copy />
                    <delete />
                    <condition>
                      <equals />
