                            <property />
                          </then>
                          <else>
                            <property />
                          </else>
                        </if>
                      </then>
                      <else>
                        <property />
                      </else>
                    </if>
                    <echo>Current commit: ${shortCommitHash} on ${commitDate}</echo>
                    <property />
                    <property />
                    <mkdir />
                    <delete />
                    <propertyfile>
                      <entry />
                      <entry />
                      <entry />
                      <entry />
                      <entry />
                      <entry />
                    </propertyfile>
