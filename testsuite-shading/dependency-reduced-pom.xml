            <version>1.8</version>
            <executions>
              <execution>
                <id>write-version-properties</id>
                <phase>initialize</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <taskdef />
                    <exec>
                      <arg />
                      <arg />
                      <arg />
                      <arg />
                    </exec>
                    <propertyregex />
                    <propertyregex />
                    <propertyregex />
                    <exec>
                      <arg />
                      <arg />
                    </exec>
                    <if>
                      <equals />
                      <then>
                        <if>
